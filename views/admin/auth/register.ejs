<form action="/admin/auth/register" method="POST">
	<div class="mb-3">
		<label for="first_name" class="form-label">Nome</label>
		<input type="text" class="form-control" id="first_name" name="first_name" required placeholder="Nome">
	</div>
	<div class="mb-3">
		<label for="last_name" class="form-label">Cognome</label>
		<input type="text" class="form-control" id="last_name" name="last_name" required placeholder="Cognome">
	</div>
	<div class="mb-3">
		<label for="email" class="form-label">Email Admin</label>
		<input type="email" class="form-control" id="email" name="email" required placeholder="admin@example.com">
	</div>
	<div class="mb-3">
		<label for="password" class="form-label">Password</label>
		<input type="password" class="form-control" id="password" name="password" required placeholder="Almeno 8 caratteri">
	</div>
	<button type="submit" class="btn btn-primary w-100 mb-3">
		<i class="fas fa-user-plus"></i> Registrati come Admin
	</button>
</form>

<hr>

<div class="text-center">
	<a href="/admin/auth/login" class="text-decoration-none">&larr; Torna al login admin</a>
</div>
