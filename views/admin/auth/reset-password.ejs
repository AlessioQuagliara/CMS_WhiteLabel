<form action="/admin/auth/reset-password" method="POST">
	<input type="hidden" name="token" value="<%= typeof token !== 'undefined' ? token : '' %>">
	<div class="mb-3">
		<label for="password" class="form-label">Nuova Password</label>
		<input type="password" class="form-control" id="password" name="password" required placeholder="Almeno 8 caratteri">
	</div>
	<button type="submit" class="btn btn-primary w-100 mb-3">
		<i class="fas fa-key"></i> Reimposta Password
	</button>
</form>

<hr>

<div class="text-center">
	<a href="/admin/auth/login" class="text-decoration-none">&larr; Torna al login admin</a>
</div>
