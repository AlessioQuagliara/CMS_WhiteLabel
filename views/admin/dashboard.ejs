<div class="d-flex flex-column flex-md-row align-items-center justify-content-between mb-4">
	<h1 class="h3 fw-bold mb-3 mb-md-0"><i class="fas fa-tachometer-alt text-primary me-2"></i>Dashboard Admin</h1>
	<span class="badge bg-primary bg-opacity-75 fs-6">
		Benvenuto,
		<% if (user) { %>
			<%= (user.first_name || user.last_name) ? ((user.first_name || '') + ' ' + (user.last_name || '')).trim() : (user.name || 'Admin') %>
		<% } else { %>
			Admin
		<% } %>
	</span>
</div>
<div class="row g-4">
	<div class="col-6 col-md-3">
		<div class="card shadow-sm border-0 h-100">
			<div class="card-body text-center">
				<i class="fas fa-users fa-2x text-primary mb-2"></i>
				<h5 class="card-title mb-1">Utenti</h5>
				<p class="card-text fs-4 fw-bold mb-0"><%= stats.users %></p>
			</div>
		</div>
	</div>
	<div class="col-6 col-md-3">
		<div class="card shadow-sm border-0 h-100">
			<div class="card-body text-center">
				<i class="fas fa-user-shield fa-2x text-primary mb-2"></i>
				<h5 class="card-title mb-1">Admin</h5>
				<p class="card-text fs-4 fw-bold mb-0"><%= stats.admins %></p>
			</div>
		</div>
	</div>
	<div class="col-6 col-md-3">
		<div class="card shadow-sm border-0 h-100">
			<div class="card-body text-center">
				<i class="fas fa-envelope fa-2x text-primary mb-2"></i>
				<h5 class="card-title mb-1">Messaggi</h5>
				<p class="card-text fs-4 fw-bold mb-0"><%= stats.messages %></p>
			</div>
		</div>
	</div>
	<div class="col-6 col-md-3">
		<div class="card shadow-sm border-0 h-100">
			<div class="card-body text-center">
				<i class="fas fa-eye fa-2x text-primary mb-2"></i>
				<h5 class="card-title mb-1">Visite</h5>
				<p class="card-text fs-4 fw-bold mb-0"><%= stats.views %></p>
			</div>
		</div>
	</div>
</div>
</div>
