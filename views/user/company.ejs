<div class="container py-4">
  <div class="d-flex align-items-center mb-3">
    <h1 class="h4 fw-bold mb-0"><i class="fas fa-building text-primary me-2"></i>La tua Azienda</h1>
    <small class="text-muted ms-3">Completa le informazioni per ottenere notifiche e offerte personalizzate</small>
  </div>

  <div class="card shadow-sm border-0">
    <div class="card-body">
      <form method="POST" action="/company" class="needs-validation" novalidate>

        <!-- Ragione sociale -->
        <div class="mb-3">
          <label class="form-label">Ragione Sociale <span class="text-danger">*</span></label>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-id-badge"></i></span>
            <input name="ragione_sociale" class="form-control" value="<%= company ? company.ragione_sociale : '' %>" required>
          </div>
        </div>

        <!-- Campo attività / Partita IVA -->
        <div class="row gy-3">
          <div class="col-md-6">
            <label class="form-label">Campo Attività <span class="text-danger">*</span></label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-briefcase"></i></span>
              <input name="campo_attivita" class="form-control" value="<%= company ? company.campo_attivita : '' %>" required>
            </div>
          </div>
          <div class="col-md-6">
            <label class="form-label">Partita IVA <span class="text-danger">*</span></label>
            <div class="input-group">
              <span class="input-group-text">IT</span>
              <input name="piva" class="form-control" value="<%= company ? company.piva : '' %>" required maxlength="20">
            </div>
          </div>
        </div>

        <!-- PEC / SDI / Codice Fiscale -->
        <div class="row gy-3 mt-3">
          <div class="col-md-6">
            <label class="form-label">PEC <span class="text-danger">*</span></label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-envelope"></i></span>
              <input name="pec" type="email" class="form-control" value="<%= company ? company.pec : '' %>" required>
            </div>
          </div>
          <div class="col-md-3">
            <label class="form-label">SDI <span class="text-danger">*</span></label>
            <input name="sdi" class="form-control" value="<%= company ? company.sdi : '' %>" required maxlength="7">
          </div>
          <div class="col-md-3">
            <label class="form-label">Codice Fiscale</label>
            <input name="codice_fiscale" class="form-control" value="<%= company ? company.codice_fiscale : '' %>" maxlength="16">
          </div>
        </div>

        <!-- Indirizzo / Città / CAP / Provincia -->
        <div class="row gy-3 mt-3">
          <div class="col-md-6">
            <label class="form-label">Indirizzo <span class="text-danger">*</span></label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
              <input name="indirizzo" class="form-control" value="<%= company ? company.indirizzo : '' %>" required>
            </div>
          </div>
          <div class="col-md-3">
            <label class="form-label">Città <span class="text-danger">*</span></label>
            <input name="citta" class="form-control" value="<%= company ? company.citta : '' %>" required>
          </div>
          <div class="col-md-3">
            <label class="form-label">CAP <span class="text-danger">*</span></label>
            <input name="cap" class="form-control" value="<%= company ? company.cap : '' %>" required maxlength="10">
          </div>
        </div>

        <div class="row gy-3 mt-3">
          <div class="col-md-3">
            <label class="form-label">Provincia <span class="text-danger">*</span></label>
            <input name="provincia" class="form-control text-uppercase" value="<%= company ? company.provincia : '' %>" required maxlength="2">
          </div>
          <div class="col-md-3">
            <label class="form-label">Nazione</label>
            <input name="nazione" class="form-control" value="<%= company ? company.nazione : 'Italia' %>">
          </div>
          <div class="col-md-6">
            <label class="form-label">Sito web</label>
            <div class="input-group">
              <span class="input-group-text">https://</span>
              <input name="sito_web" class="form-control" value="<%= company ? company.sito_web : '' %>">
            </div>
          </div>
        </div>

        <!-- Fatturato / Telefono -->
        <div class="row gy-3 mt-3 align-items-end">
          <div class="col-md-4">
            <label class="form-label">Fatturato (€) <span class="text-danger">*</span></label>
            <input name="fatturato" type="number" step="0.01" min="0" placeholder="0.00" required class="form-control" value="<%= company ? company.fatturato : '' %>">
          </div>
          <div class="col-md-4">
            <label class="form-label">Telefono</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-phone"></i></span>
              <input name="telefono" class="form-control" value="<%= company ? company.telefono : '' %>">
            </div>
          </div>
          <div class="col-md-4 text-end">
            <button type="submit" class="btn btn-primary btn-lg">
              <i class="fas fa-save me-2"></i>Salva Azienda
            </button>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>

<!-- container dati per alert (URL-encoded per sicurezza) -->
<div id="company-data" style="display:none"
  data-error="<%= encodeURIComponent(typeof error !== 'undefined' && error ? error : '') %>"
  data-validation="<%= encodeURIComponent(typeof validation !== 'undefined' && validation ? validation : '') %>">
  </div>
<script>
  (function(){
    try {
      const el = document.getElementById('company-data');
      const rawError = el ? el.dataset.error : '';
      const rawValidation = el ? el.dataset.validation : '';
      const companyError = rawError ? decodeURIComponent(rawError) : null;
      const companyValidation = rawValidation ? decodeURIComponent(rawValidation) : null;

      function showAlert() {
        if (!window.Swal) {
          const s = document.createElement('script');
          s.src = 'https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js';
          s.async = true;
          s.onload = () => _show();
          s.onerror = () => console.warn('Impossibile caricare SweetAlert2 dal CDN');
          document.head.appendChild(s);
          return;
        }
        _show();
      }

      function _show() {
        if (companyError) {
          Swal.fire({ icon: 'error', title: 'Errore', text: companyError, confirmButtonText: 'OK' });
          return;
        }
        if (companyValidation) {
          Swal.fire({ icon: 'warning', title: 'Validazione', html: companyValidation, confirmButtonText: 'OK' });
        }
      }

      if (companyError || companyValidation) showAlert();
    } catch (e) {
      console.warn('Errore gestione alert company:', e);
    }
  })();
</script>
